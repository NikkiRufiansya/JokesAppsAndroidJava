<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailJokes">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:id="@+id/btnClose"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:layout_below="@id/toolbar"
        android:id="@+id/setup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:fontFamily="@font/awesome_quote"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis neque purus, rhoncus ac justo et, consequat volutpat tellus. Aenean pellentesque luctus dolor suscipit consequat ?" />

    <TextView
        android:layout_below="@id/setup"
        android:id="@+id/punchline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:fontFamily="@font/awesome_quote"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis neque purus." />

    <TextView
        android:id="@+id/type"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:layout_marginHorizontal="20dp"
        android:text="General"
        android:layout_alignParentRight="true"
        android:layout_below="@id/punchline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>