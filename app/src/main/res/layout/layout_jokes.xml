<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/layoutJokes"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/setup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/funny"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis neque purus, rhoncus ac justo et, consequat volutpat tellus. Aenean pellentesque luctus dolor suscipit consequat ?" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutPunchline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/punchline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/funny"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis neque purus," />

    </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>