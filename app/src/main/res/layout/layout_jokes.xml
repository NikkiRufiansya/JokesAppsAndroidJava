<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/setup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:fontFamily="@font/awesome_quote"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis neque purus, rhoncus ac justo et, consequat volutpat tellus. Aenean pellentesque luctus dolor suscipit consequat." />

        <TextView
            android:id="@+id/btnSeeNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/setup"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:text="See now"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>